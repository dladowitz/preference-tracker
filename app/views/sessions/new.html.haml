.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-7
      .ibox.float-e-margins
        .ibox-title
          %h3
            Sign In
        .ibox-content
          .row
            .col-sm-10

            = form_tag sessions_path do
              .form-group
                = label_tag :email
                = email_field_tag :email, nil, class: "form-control", placeholder: "jburly@gmail.com"
              .form-group
                = label_tag :password
                = password_field_tag :password, nil, class: "form-control"
              = submit_tag "Sign In", class: "btn btn-success"

              #password_links.pull-right
                = link_to "Sign Up", new_contact_path, class: "blue", id: "signup"
                |
                = link_to "Forgot Password", request_password_path, class: "blue"
